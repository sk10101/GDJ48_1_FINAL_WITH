<mapper namespace="com.with.history.dao.HistoryDAO">
	
	
<select id="mygrouplist" resultType="com.with.history.dto.HistoryDTO">
	SELECT 
		b.board_idx,
		b.category_id,
		b.subject,
		b.write_date,
		count(a.member_id),
		b.recruit_end 
	FROM board_common_column b, apply a 
	WHERE b.member_id = '일반회원' AND a.status = '대기중' AND b.board_idx = a.board_idx
	</select>
	
